generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username String
  email    String @unique

  password String
  role     String
}

model DataCategory {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String @unique
}

model DataItem {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categoryId  Int
  title       String
  description String
  price       Int
  fileUrl     String
}

model Order {
  id         Int      @id @default(autoincrement())
  userId     Int
  dataItemId Int
  orderDate  DateTime
  amount     Int
  status     String
}

model Review {
  id         Int      @id @default(autoincrement())
  dataItemId Int
  userId     Int
  rating     Int
  comment    String
  createdAt  DateTime
}

model Payment {
  id            Int      @id @default(autoincrement())
  orderId       Int
  userId        Int
  amount        Int
  paymentDate   DateTime
  paymentMethod String
  status        String
}

model Download {
  id            Int      @id @default(autoincrement())
  userId        Int
  dataItemId    Int
  downloadDate  DateTime
  downloadCount Int
}
